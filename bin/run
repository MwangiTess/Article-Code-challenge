#!/usr/bin/env ruby 

require_relative '../config/environment'

# Example usage of the Author Class

author1 = Author.new("JK Rowling")
puts author1.name #Output JK Rowling 

author2 = Author.new("C.M. Owens")
puts author2.name #Output C.M. Owens

# Example usage of the Magazine Class 

magazine1 = Magazine.new(name: "Harry Potter", category: "Fantasy Literature")
puts magazine1.name #Output Harry Potter
puts magazine1.category # Output Fantasy Literature

magazine2 = Magazine.new(name: "Loving War", category: "Romance")
puts magazine2.name #Output LOving War
puts magazine2.category #Output Romance


all_magazines = Magazine.all
puts all_magazines # Output #<Magazine:0x00005562b5de6418> #<Magazine:0x00005562b5de6328>


# Example Usage of the Article Class

article1 = Article.new(author: author1, magazine: magazine1, title: "Goblet of Fire")
puts article1.author.name # Output JK Rowling
puts article1.magazine.name # Ouput Harry Potter
puts article1.title # Output Goblet of Fire

article2 = Article.new(author: author2, magazine: magazine2, title: "Sterling Shore")
puts article2.author.name # Output C.M. Owens
puts article2.magazine.category # Output Romance
puts article2.title # Output Sterling Shore



